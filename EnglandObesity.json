{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height": 650,
  "view": {"stroke": "transparent"},
  "title": {
    "text": "Percentage of Adults Classified as Overweight or Obese",
    "fontSize": 14,
    "subtitle": ["By Local Authority area. Source: ONS and PHE"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "middle"
  },
  "params": [
    {
      "name": "yearSelector",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2020,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/jesme00/jesme00.github.io/main/percentageadultsoverweightorobese.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.Year == yearSelector"},
    {
      "lookup": "Area Name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jesme00/jesme00.github.io/main/LAD21.json",
          "format": {"property": "features"}
        },
        "key": "properties.LAD21NM",
        "fields": ["properties", "type", "geometry"]
      }
    }
  ],
  "projection": {"type": "mercator"},
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Value",
      "legend": {
        "title": "%",
        "titleFontSize": 12,
        "titleAlign": "left",
        "titleAnchor":"start",
        "gradientLength": 250,
        "orient": "bottom-right",
        "direction": "horizontal",
        "titlePadding":6
        
      },
      
      "type": "quantitative",
      "scale": {
        "domain": [38, 77],
        "type": "linear",
        "scheme": "yellowgreenblue"}
    },
    "tooltip": [
      {
        "field": "properties.LAD21NM",
        "type": "nominal",
        "title": "Local Authority"
      },
      {
        "field": "Value",
        "type": "quantitative",
        "title": "Overweight/Obesity Rate"
      }
    ]
  }
}
