    {
      "mark": {"type": "line", "color": "#00a6c8"},
      "transform": [{"regression": "Obesity Rate", "on": "Weekly Earnings"}],
      "encoding": {
        "x": {"field": "Weekly Earnings", "type": "quantitative"},
        "y": {"field": "Obesity Rate", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {"regression": "Obesity Rate", "on": "Weekly Earnings", "params": true},
        {"calculate": "'R²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "#00a6c8",
        "fontWeight": "bold",
        "fontStyle": "normal",
        "x": "width",
        "align": "right",
        "y": 16,
        "size": 12
      },
      "encoding": {"text": {"type": "nominal", "field": "R2"}}
