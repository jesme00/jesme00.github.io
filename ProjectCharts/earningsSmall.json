          "field": "Weekly Earnings",
          "type": "quantitative",
          "scale": {"domain": [400, 800]},
          "title": "Average Weekly Earnings, £",
          "axis": {
            "labelFontSize": 12,
            "ticks": true,
            "tickOpacity": 1,
            "titleFontSize": 12,
            "titleFontWeight": "bold"
          }
        },
        "y": {
          "field": "Obesity Rate",
          "type": "quantitative",
          "scale": {"domain": [43, 78]},
          "title": "% adults classified as overweight or obese",
          "axis": {
            "labelFontSize": 12,
            "tickWidth": 1,
            "ticks": true,
            "tickOpacity": 1,
            "titleFontSize": 12,
            "titleFontWeight": "bold"
          }
        },
        "size": {
          "field": "Weekly Earnings",
          "type": "quantitative",
          "title": "Prison Rate",
          "scale": {"range": [-550, 550]},
          "legend": null,
          "condition": {"value": 900, "selection": "picked"}
        },
        "color": {
          "value": "#5bbb07",
          "condition": {
            "field": "Local Area",
            "selection": "picked",
            "type": "nominal",
            "legend": null,
            "scale": {"scheme": "darkblue"}
          }
        },
        "opacity": {
          "value": 0.5,
          "condition": {"value": 1, "selection": "picked"}
        },
