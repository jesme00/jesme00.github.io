          {"field": "Area Name", "type": "nominal"},
          {
            "field": "Weekly Earnings",
            "type": "quantitative",
            "title": "Weekly Earnings (£)"
          },
          {
            "field": "Obesity Rate",
            "type": "quantitative",
            "title": "Average Years of Schooling"
          }
        ]
